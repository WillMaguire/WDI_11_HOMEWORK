<header>
  <h1><%= @result["title"] %>
    <a href="/">Search another</a>
  </h1>
  <ul class="header-info">
    <li>Year: <%= @result["year"] %></li>
    <li>Rating: <%= @result["rated"] %></li>
    <li>Released: <%= @result["released"] %></li>
    <li>Runtime: <%= @result["runtime"] %></li>
    <li>Metascore: <%= @result["metascore"] %></li>
    <li>IMDB: <%= @result["imdbrating"] %></li>
  </ul>
</header>
<div class="main">
  <img src=<%= @result["poster"] %> alt="">
  <div>
    <div class="plot"><%= @result["plot"] %></div>
    <ul>
      <li>Director: <%= @result["director"] %></li>
      <li>Writer: <%= @result["writer"] %></li>
      <li>Actors: <%= @result["actors"] %></li>
      <li>Language: <%= @result["language"] %></li>
      <li>Awards: <%= @result["awards"] %></li>
    </ul>
  </div>
</div>
