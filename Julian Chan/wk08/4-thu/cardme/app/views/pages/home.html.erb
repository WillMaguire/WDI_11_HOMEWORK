<div id="app"></div>

<form class="edit-card-form">
  <input type="hidden" name="id">
  <label for="">name</label>
  <input type="text" name="name">
  <label for="">image_url</label>
  <input type="text" name="image_url">
  <button>edit card</button>
</form>

<script id="index-template" type="text/x-handlebars-template">
  <div class="wrapper">
  </div>
  <form class="new-card-form">
    <label for="">name</label>
    <input type="text" class="new-card-name" name="name">
    <label for="">image_url</label>
    <input type="text" class="new-card-image_url" name="image_url">
    <button class="new-card-action">create card</button>
  </form>
</script>

<script id="card-template" type="text/x-handlebars-template">
  <div class="card" data-id="{{ id }}">
    <header class="content">
      <div class="name">{{ name }}</div>
    </header>
    <div class="image">
      <img class="image_url" src="{{ image_url }}" alt="">
    </div>
    <footer class="content">
      <div>
        <span class="delete-action">delete</span>
        <span class="edit-action">edit</span>
      </div>
    </footer>
  </div>
</script>
