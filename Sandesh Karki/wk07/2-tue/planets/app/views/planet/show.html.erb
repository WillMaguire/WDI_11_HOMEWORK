
<div class="ui-card">
  <h2><%= @planet.name %> </h2>
  <img src="<%= @planet.image_url %>">
  <h3>Position from Sun: <%= @planet.position %> </h3>
  <h3>Habitable: <%= @planet.life %> </h3>
  <h3>Radius: <%= @planet.radius %> </h3>
  <h3>Distance from Sun(millions km): <%= @planet.distance_from_sun_in_million_km %> </h3>

  <%= form_tag '/planet/destroy', method: "delete" do %>
    <input type="hidden" name="planet_id" value="<%= @planet.id %>">

    <button> delete </button>
  <% end %>

<br>
  <%= form_tag '/comment/create', method: "post" do %>
      <input type="hidden" name="planet_id" value="<% @planet.id %>">

      <textarea name="body"> enter your comment here </textarea>
      <button>add</button>
  <% end %>








