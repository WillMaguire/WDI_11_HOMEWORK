<h1>Planets</h1>

<%= form_tag '/new', method: 'get' do %>
  <button>Add a planet</button>
<% end %>


<% @planets.each do |planet| %>
  <h2><%= planet.name %></h2>
  <img src="<%= planet.image_url%>" alt="">

  <%= form_tag '/', method: 'delete' do %>
    <input type="hidden" name="planet_id" value="<%= planet.id %>">
    <button>Delete Planet</button>
  <% end %>

  <%= form_tag '/edit', method: 'get' do %>
    <input type="hidden" name="planet_id" value="<%= planet.id %>">
    <button>Edit Planet</button>
  <% end %>

<% end %>
